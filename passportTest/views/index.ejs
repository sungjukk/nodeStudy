<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, width=device-width" />
<meta name="mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-capable" content="yes">
<link rel="stylesheet" type="text/css" href="semantic/semantic.min.css">
<script
  src="https://code.jquery.com/jquery-3.1.1.min.js"
  integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
  crossorigin="anonymous"></script>
<script src="semantic/semantic.min.js"></script>
<script>
	function slideBar(){
		$('.ui.labeled.icon.sidebar').sidebar('toggle');
	}

	function showLoginForm() {
		$('.ui.basic.modal').modal('show');
	}

	function login() {
		$('#loginFrm').submit();
	}
</script>
<title>Insert title here</title>
</head>
<body>
	<div class="ui left demo vertical inverted sidebar labeled icon menu" style='margin : 0'>
  <% if (sess == null) { %>
  <a class="item" href='javascript:showLoginForm()'>
    <i class="sign in icon"></i>
    로그인
  </a>
  <% } else if (sess != null) {%>
  <a class="item" href='/login/logout'>
    <i class="sign in icon"></i>
    로그아웃
  </a>
  <% } %>
  <a class="item">
    <i class="block layout icon"></i>
    Topics
  </a>
  <a class="item">
    <i class="smile icon"></i>
    Friends
  </a>
</div>

<div class="ui inverted menu" style='margin-top : 0px'>
  <a class="item" href='javascript:slideBar()'>
      <i class='sidebar icon'></i>
  </a>
  <a class="item">
    Messages
  </a>
  <a class="item">
    Friends
  </a>
</div>

<div class="ui basic modal">
  <div class="ui icon header">
  </div>
  <div class="content">
    <form class="ui form" id='loginFrm' method='post' action='/login'>
  <div class="field">
    <label style='color:white'>UserName</label>
    <input type="text" name="username" placeholder="First Name">
  </div>
  <div class="field">
    <label style='color:white'>Password</label>
    <input type="password" name="password" placeholder="Last Name">
  </div>
  <div class="field">
    <div class="ui checkbox">
      <input type="checkbox" tabindex="0" class="hidden">
      <label style='color:white'>I agree to the Terms and Conditions</label>
    </div>
  </div>
</form>
  </div>
  <div class="actions">
    <div class="ui red basic cancel inverted button">
      <i class="remove icon"></i>
      Cancel
    </div>
    <div class="ui green ok inverted button" onclick='login()'>
      <i class="checkmark icon"></i>
      Login
    </div>
  </div>
</div>
</body>
</html>